<h1>""</h1>
<h1>Icons: Level 1</h1>
<% Dir.foreach('/Users/apple/Actualize/Capstone/public/images/') do |item| %>
  <%next if item == '.' or item == '..' or item[0] == '.'%>
  <div class="col-lg-1">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-12 icon">
                    <img src="/images/<%=item %>" width=100%>
                    <%= item %>
                    <%= form_tag "/users/#{@user.id}", method: :patch do %>
                      <div>
                        <input type="text" class="form-control hidden" name="form_icon" value="<%= item %>">
                        <input type ="submit" value="Select">
                      </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
  </div>
<% end %>
